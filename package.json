{
  "name": "kudach",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "vite build && firebase deploy --only hosting && rimraf dist",
    "lint": "eslint --ext .js,.ts,.vue src"
  },
  "dependencies": {
    "@firebase/app-types": "^0.9.2",
    "@firebase/util": "^1.9.7",
    "@mdi/font": "^7.4.47",
    "@types/js-cookie": "^3.0.6",
    "@types/jsonp": "^0.2.3",
    "@vkontakte/api-schema-typescript": "1.5199.0",
    "core-js": "^3.38.1",
    "firebase": "^8.10.1",
    "js-cookie": "^3.0.5",
    "jsonp": "0.2.1",
    "moment": "^2.30.1",
    "portal-vue": "^2.1.7",
    "reflect-metadata": "^0.2.2",
    "roboto-fontface": "^0.10.0",
    "vue": "^2.7.16",
    "vue-analytics": "^5.22.1",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.6.5",
    "vuetify": "^2.7.2",
    "vuex": "^3.0.1",
    "vuex-module-decorators": "^0.10.1"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "@vitejs/plugin-vue2": "^2.3.1",
    "eslint": "8.42.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.28.0",
    "prettier": "^3.3.3",
    "sass": "^1.79.3",
    "typescript": "^4.9.5",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^4.5.14",
    "vite-plugin-pwa": "^0.20.5",
    "vite-plugin-vue2": "^2.0.3",
    "vue-template-compiler": "^2.7.16"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "parser": "@typescript-eslint/parser"
    },
    "plugins": [
      "vue",
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "semi": false,
          "trailingComma": "all",
          "bracketSpacing": false,
          "printWidth": 100
        }
      ],
      "vue/multi-word-component-names": "warn",
      "@typescript-eslint/no-non-null-assertion": "warn",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "bracketSpacing": false,
    "printWidth": 100
  }
}
